<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ferretería Los Chapuces{% endblock %}</title>
        {# Bootstrap 5 y FontAwesome #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

        {# Hoja de estilos personalizada #}
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
    </head>
    <body class="d-flex flex-column min-vh-100 bg-light">

        {# Barra de navegación principal #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 border-bottom border-warning border-3">
            <div class="container">
                <a class="navbar-brand" href="{{ path('categorias') }}">
                    <i class="fas fa-wrench text-warning me-2"></i>LOS CHAPUCES
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fw-bold">
                        
                        {# 1. ENLACES PÚBLICOS #}
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('categorias') }}">Categorías</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{ path('cesta') }}">
                                <i class="fas fa-shopping-cart"></i> Cesta
                            </a>
                        </li>

                        {# 2. ZONA DE USUARIO LOGUEADO #}
                        {% if app.user %}
                            
                            {# ---> AQUÍ ESTÁ EL CAMBIO: SOLO PARA EL JEFE <--- #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link text-danger fw-bold border border-danger rounded ms-2 me-2" href="{{ path('dashboard') }}">
                                        <i class="fas fa-cogs"></i> Panel Admin
                                    </a>
                                </li>
                            {% endif %}
                            {# ------------------------------------------------ #}

                            <li class="nav-item">
                                <a class="nav-link text-white" href="{{ path('pedidos') }}">
                                    <i class="fas fa-clipboard-list text-warning"></i> Mis Pedidos
                                </a>
                            </li>

                            <li class="nav-item ms-3">
                                <a class="nav-link text-warning border border-warning rounded px-3" href="{{ path('logout') }}">
                                    <i class="fas fa-sign-out-alt"></i> Salir
                                </a>
                            </li>
                        
                        {# 3. ZONA DE INVITADO (NO LOGUEADO) #}
                        {% else %}
                            <li class="nav-item ms-3">
                                <a class="nav-link text-warning border border-warning rounded px-3" href="{{ path('login') }}">
                                    <i class="fas fa-user"></i> Login
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# Contenedor principal #}
        <main class="flex-shrink-0">
            {% block body %}{% endblock %}
        </main>

        {# Pie de página #}
        <footer class="footer mt-auto py-3 bg-secondary text-white text-center">
            <div class="container">
                <span class="small">© 2024 Ferretería Los Chapuces S.L. - "Lo arreglamos todo (o casi)"</span>
            </div>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>