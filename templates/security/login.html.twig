{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="text-center mb-4">
                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                    <i class="fas fa-user fa-lg"></i>
                </div>
                <h3 class="fw-bold">Bienvenido de nuevo</h3>
                <p class="text-muted">Accede a tu cuenta para gestionar tus pedidos</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-sm-5">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="alert alert-info mb-3">
                                Ya has iniciado sesión como {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Salir</a>
                            </div>
                        {% endif %}

                        <div class="form-floating mb-3">
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control rounded-3" autocomplete="email" required autofocus placeholder="name@example.com">
                            <label for="username">Correo electrónico</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" name="_password" id="password" class="form-control rounded-3" autocomplete="current-password" required placeholder="Contraseña">
                            <label for="password">Contraseña</label>
                        </div>

                        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid mb-4">
                            <button class="btn btn-primary btn-lg rounded-3 fw-bold" type="submit">
                                Entrar
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0 text-muted">¿No tienes cuenta? <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold">Regístrate</a></p>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="{{ path('categorias') }}" class="text-muted text-decoration-none small">
                    <i class="fas fa-arrow-left me-1"></i> Volver a la tienda
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}