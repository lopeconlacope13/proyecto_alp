{% extends 'base.html.twig' %}

{% block title %}Mi Cesta{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4 fw-bold text-dark"><i class="fas fa-shopping-bag me-2 text-primary"></i>Tu Cesta</h2>

    {% if productos is empty %}
        <div class="row justify-content-center">
            <div class="col-md-6 text-center py-5">
                <img src="https://placehold.co/200x200/png?text=Empty" class="mb-4 opacity-50" style="max-width: 150px;">
                <h3 class="fw-bold">Tu cesta está vacía</h3>
                <p class="text-muted mb-4">¡No te quedes con las ganas! Llena tu cesta con los mejores productos.</p>
                <a href="{{ path('categorias') }}" class="btn btn-primary btn-lg rounded-pill px-5">Empezar a comprar</a>
            </div>
        </div>
    {% else %}
        <div class="row g-5">
            {# COLUMNA IZQUIERDA: LISTA DE PRODUCTOS #}
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
                    <div class="card-header bg-white py-3 border-bottom">
                        <h5 class="mb-0 fw-bold">Artículos seleccionados ({{ productos|length }})</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0 table-hover">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th scope="col" class="ps-4 py-3 border-0">Producto</th>
                                    <th scope="col" class="text-center py-3 border-0">Cantidad</th>
                                    <th scope="col" class="text-end py-3 border-0">Precio</th>
                                    <th scope="col" class="text-end py-3 border-0">Total</th>
                                    <th scope="col" class="py-3 border-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set total = 0 %}
                                {% for codigo, producto in productos %}
                                    {% set subtotal = producto.precio * unidades[codigo] %}
                                    {% set total = total + subtotal %}
                                    
                                    <tr>
                                        <td class="ps-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-light rounded p-2 me-3 border">
                                                    <img src="https://placehold.co/50x50/e9ecef/6c757d" alt="img" width="50" height="50">
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-bold text-dark">{{ producto.nombre }}</h6>
                                                    <small class="text-muted">Ref: {{ producto.codigo }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <div class="d-inline-block border px-3 py-1 rounded bg-white fw-bold">
                                                {{ unidades[codigo] }}
                                            </div>
                                        </td>
                                        <td class="text-end text-muted">{{ producto.precio|number_format(2) }} €</td>
                                        <td class="text-end fw-bold">{{ subtotal|number_format(2) }} €</td>
                                        <td class="text-end pe-4">
                                            <form action="{{ path('eliminar') }}" method="POST">
                                                <input type="hidden" name="producto_id" value="{{ codigo }}">
                                                <input type="hidden" name="unidades" value="{{ unidades[codigo] }}">
                                                <button type="submit" class="btn btn-link text-danger p-0" title="Eliminar">
                                                    <i class="far fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="mt-4">
                    <a href="{{ path('categorias') }}" class="text-decoration-none text-muted fw-bold">
                        <i class="fas fa-arrow-left me-2"></i> Seguir comprando
                    </a>
                </div>
            </div>

            {# COLUMNA DERECHA: RESUMEN #}
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 rounded-3 bg-light">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-4">Resumen</h4>
                        <div class="d-flex justify-content-between mb-2 text-muted">
                            <span>Subtotal</span>
                            <span>{{ total|number_format(2) }} €</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2 text-muted">
                            <span>Impuestos (IVA incl.)</span>
                            <span>Included</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4 text-success">
                            <span>Envío</span>
                            <span class="fw-bold">GRATIS</span>
                        </div>
                        <hr class="text-muted">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fs-5 fw-bold">Total a pagar</span>
                            <span class="fs-3 fw-bold text-dark">{{ total|number_format(2) }} €</span>
                        </div>

                        <a href="{{ path('pedido') }}" class="btn btn-dark w-100 py-3 rounded-3 fw-bold shadow-sm mb-3">
                            Tramitar Pedido <i class="fas fa-lock ms-2"></i>
                        </a>

                        <div class="text-center">
                            <small class="text-muted d-block mb-2">Aceptamos</small>
                            <div class="d-flex justify-content-center gap-2 text-muted fs-4">
                                <i class="fab fa-cc-visa"></i>
                                <i class="fab fa-cc-mastercard"></i>
                                <i class="fab fa-cc-paypal"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}