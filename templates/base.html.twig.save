<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ferretería Los Chapuces{% endblock %}</title>
        {# Bootstrap 5 y FontAwesome #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        
        {# Tu CSS propio #}
        <link rel="stylesheet" href="{{ asset('css/estilos.css') }}">
    </head>
    <body class="d-flex flex-column min-vh-100 bg-light">
        
        {# Navbar Industrial #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3 border-bottom border-warning border-3">
            <div class="container">
                <a class="navbar-brand" href="{{ path('categorias') }}">
                    <i class="fas fa-wrench text-warning me-2"></i>LOS CHAPUCES
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fw-bold">
                        <li class="nav-item"><a class="nav-link text-white" href="{{ path('categorias') }}">Almacén</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="{{ path('cesta') }}"><i class="fas fa-shopping-cart"></i> Cesta</a></li>
                        {% if app.user %}
                             <li class="nav-item"><a class="nav-link text-warning" href="{{ path('logout') }}">Salir</a></li>
                        {% else %}
                             <li class="nav-item"><a class="nav-link text-warning" href="{{ path('login') }}">Fichar (Login)</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        {# Contenido #}
        <main class="flex-shrink-0">
            {% block body %}{% endblock %}
        </main>

        {# Footer #}
        <footer class="footer mt-auto py-3 bg-secondary text-white text-center">
