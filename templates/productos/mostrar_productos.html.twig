{% extends 'base.html.twig' %}

{% block title %}Hello ProductosController!{% endblock %}

{% block body %}
    <h1>PRODUCTOS</h1>
    <form action="{{ path("anadir") }}" method="post">
        <table style="width: 100%; border-collapse: collapse; margin: 20px; font-family: Arial, sans-serif">
            <thead>
                <tr>
                    <td>Nombre Corto</td>
                    <td>Nombre</td>
                    <td>Descripcion</td>
                    <td>Precio</td>
                    <td>Unidades</td>
                </tr>
             </thead>
             <tbody>
                 {% for producto in productos%}
                     <tr style="border-bottom: 1px solid black"; background-color="#f4faff";>
                         <td style="padding: 10px">{{ producto.getNombreCorto() }}</td>
                         <td style="padding: 10px">{{ producto.getNombre() }}</td>
                         <td style="padding: 10px">{{ producto.getDescripcion() }}</td>
                         <td style="padding: 10px">{{ producto.getPrecio() }}</td>
                         <td>
                             <input type="number" name="unidades[]" value="0">
                             <input type="hidden" name="productos_id[]" value="{{ producto.getId() }}">
                             
                         </td>
                     </tr>
                 {% endfor %}
             </tbody>
        </table>
                 <input type="submit" name="enviar" value="Enviar">
        </form>
{% endblock %}
