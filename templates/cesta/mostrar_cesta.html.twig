{% extends 'base.html.twig' %}

{% block title %}Caja de Herramientas{% endblock %}

{% block body %}
<div class="container py-5">
    <h2 class="mb-4 fw-bold text-dark"><i class="fas fa-toolbox me-2 text-warning"></i>Tu Caja de Herramientas</h2>

    {% if productos is empty %}
        <div class="text-center py-5 bg-white border rounded shadow-sm">
            <i class="fas fa-box-open fa-4x text-muted mb-3 opacity-50"></i>
            <h3>No llevas "ná", jefe</h3>
            <p class="text-muted">Así no vas a arreglar el grifo que gotea.</p>
            <a href="{{ path('categorias') }}" class="btn btn-primary mt-3">Ir a por material</a>
        </div>
    {% else %}
        <div class="row">
            {# TABLA DE PRODUCTOS #}
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-dark text-white fw-bold">
                        Material seleccionado
                    </div>
                    <div class="table-responsive">
                        <table class="table align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Artículo</th>
                                    <th class="text-center">Cant.</th>
                                    <th class="text-end">Precio</th>
                                    <th class="text-end pe-3">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set total = 0 %}
                                {% for codigo, producto in productos %}
                                    {% set subtotal = producto.precio * unidades[codigo] %}
                                    {% set total = total + subtotal %}
                                    
                                    <tr>
                                        <td class="ps-3">
                                            <div class="fw-bold">{{ producto.nombre }}</div>
                                            <small class="text-muted">{{ producto.codigo }}</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">{{ unidades[codigo] }}</span>
                                        </td>
                                        <td class="text-end">{{ producto.precio|number_format(2) }} €</td>
                                        <td class="text-end fw-bold">{{ subtotal|number_format(2) }} €</td>
                                        <td class="text-end pe-3">
                                            <form action="{{ path('eliminar') }}" method="POST">
                                                <input type="hidden" name="producto_id" value="{{ codigo }}">
                                                <input type="hidden" name="unidades" value="{{ unidades[codigo] }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger border-0" title="Quitar esto">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="{{ path('categorias') }}" class="text-decoration-none text-secondary fw-bold">
                        <i class="fas fa-arrow-left me-1"></i> Se me olvida algo (Volver)
                    </a>
                </div>
            </div>

            {# RESUMEN (El ticket) #}
            <div class="col-lg-4">
                <div class="card border-warning border-2 bg-light shadow-sm">
                    <div class="card-body p-4">
                        <h4 class="fw-bold mb-3 border-bottom pb-2">La Dolorosa</h4>
                        
                        <div class="d-flex justify-content-between mb-2">
                            <span>Base Imponible</span>
                            <span>{{ total|number_format(2) }} €</span>
                        </div>
                        <div class="d-flex justify-content-between mb-4 text-success fw-bold">
                            <span>IVA (Incluido)</span>
                            <span>21%</span>
                        </div>
                        
                        <div class="alert alert-warning text-center fw-bold fs-4">
                            Total: {{ total|number_format(2) }} €
                        </div>

                        <a href="{{ path('pedido') }}" class="btn btn-dark w-100 py-3 fw-bold">
                            <i class="fas fa-check-circle me-2"></i> CONFIRMAR PEDIDO
                        </a>
                        <div class="text-center mt-3 small text-muted">
                            <i class="fas fa-lock"></i> Pago seguro (aceptamos chapas)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}