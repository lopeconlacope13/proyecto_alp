{% extends 'base.html.twig' %}

{% block title %}Categorías | Mi Tienda{% endblock %}

{% block body %}
{# Estilos inline para efectos específicos (puedes moverlo a tu CSS) #}
<style>
    .hero-banner {
        background: url('https://placehold.co/1200x400/1a1a1a/FFF?text=Nueva+Colección') no-repeat center center;
        background-size: cover;
        position: relative;
        border-radius: 15px;
        overflow: hidden;
    }
    .hero-overlay {
        background: rgba(0, 0, 0, 0.5);
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
    }
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }
    .category-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
    }
    .category-card img {
        transition: transform 0.5s ease;
    }
    .category-card:hover img {
        transform: scale(1.05);
    }
</style>

<div class="container py-5">
    {# Hero Section #}
    <div class="hero-banner p-5 mb-5 text-white text-center shadow-lg">
        <div class="hero-overlay"></div>
        <div class="position-relative z-1 py-4">
            <h1 class="display-4 fw-bold">Bienvenido a ShopOnline</h1>
            <p class="lead mb-4">Calidad premium en cada producto. Explora nuestras colecciones.</p>
            <a href="#catalogo" class="btn btn-light btn-lg rounded-pill px-4 fw-bold">Ver Catálogo</a>
        </div>
    </div>

    <div id="catalogo" class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <h2 class="fw-bold text-dark"><i class="fas fa-th-large me-2 text-primary"></i>Nuestras Categorías</h2>
        <span class="text-muted">{{ categorias|length }} Colecciones disponibles</span>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for categoria in categorias %}
            <div class="col">
                <a href="{{ path('productos', {'categoria_id': categoria.id}) }}" class="text-decoration-none text-dark">
                    <div class="card h-100 border-0 shadow-sm category-card">
                        <div class="position-relative" style="height: 250px;">
                            <img src="https://placehold.co/600x400/f8f9fa/343a40?text={{ categoria.nombre }}" 
                                 class="card-img-top w-100 h-100 object-fit-cover" 
                                 alt="{{ categoria.nombre }}">
                            <div class="position-absolute bottom-0 start-0 w-100 p-3" 
                                 style="background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);">
                                <h4 class="text-white mb-0 fw-bold">{{ categoria.nombre }}</h4>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <span class="text-muted small">Ref: {{ categoria.codigo }}</span>
                            <span class="btn btn-outline-primary btn-sm rounded-pill">Ver productos <i class="fas fa-arrow-right ms-1"></i></span>
                        </div>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12 text-center py-5">
                <div class="alert alert-light border shadow-sm">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h4>No hay categorías disponibles</h4>
                    <p class="text-muted">Estamos reponiendo nuestro inventario.</p>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}