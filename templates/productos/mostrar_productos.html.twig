{% extends 'base.html.twig' %}

{% block title %}Productos | Catálogo{% endblock %}

{% block body %}
<div class="bg-light border-bottom mb-4 py-3">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="{{ path('categorias') }}" class="text-decoration-none">Categorías</a></li>
                <li class="breadcrumb-item active" aria-current="page">Listado de Productos</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container pb-5">
    <form action="{{ path('anadir') }}" method="POST">
        
        {# Cabecera de acción Sticky (se queda pegada arriba al hacer scroll) #}
        <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 sticky-top bg-white py-3 px-3 shadow-sm rounded border" style="top: 20px; z-index: 100;">
            <div>
                <h2 class="h4 mb-0 fw-bold">Selecciona tus productos</h2>
                <small class="text-muted">Introduce la cantidad deseada en cada artículo</small>
            </div>
            <button type="submit" class="btn btn-primary btn-lg shadow-sm px-4 rounded-pill">
                <i class="fas fa-cart-plus me-2"></i> Añadir a la Cesta
            </button>
        </div>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            {% for producto in productos %}
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        {# Badge de precio #}
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-dark fs-6 py-2 px-3 rounded-pill shadow-sm">{{ producto.precio|number_format(2) }} €</span>
                        </div>

                        <img src="https://placehold.co/400x400/e9ecef/6c757d?text={{ producto.nombre }}" 
                             class="card-img-top p-4" 
                             style="object-fit: contain; height: 250px;" 
                             alt="{{ producto.nombre }}">
                        
                        <div class="card-body d-flex flex-column border-top">
                            <h5 class="card-title fw-bold text-truncate">{{ producto.nombre }}</h5>
                            <p class="card-text text-muted small flex-grow-1" style="min-height: 40px;">
                                {{ producto.descripcion|length > 60 ? producto.descripcion|slice(0, 60) ~ '...' : producto.descripcion }}
                            </p>
                            
                            <div class="mt-3">
                                <label class="form-label small fw-bold text-uppercase text-muted">Cantidad</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-end-0"><i class="fas fa-hashtag text-muted"></i></span>
                                    <input type="hidden" name="productos_id[]" value="{{ producto.id }}">
                                    <input type="number" 
                                           name="unidades[]" 
                                           value="0" 
                                           min="0" 
                                           class="form-control border-start-0 text-center fw-bold" 
                                           placeholder="0">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="fas fa-search fa-3x text-muted mb-3"></i>
                        <h3>No se encontraron productos</h3>
                        <p class="text-muted">Intenta volver a las categorías.</p>
                        <a href="{{ path('categorias') }}" class="btn btn-outline-dark">Volver</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </form>
</div>
{% endblock %}